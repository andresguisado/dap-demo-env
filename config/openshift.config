############################################################
# OPENSHIFT CONFIG 
############################################################

# DOCKER & CLUSTER
export KUBECONFIGDIR=					# directory for kubeconfig
export KUBECONFIG=$KUBECONFIGDIR/config			# path to kubeconfig file
export DOCKER_REGISTRY_URL=				# host & port of registry

# USERS for OpenShift RBAC
export CLUSTER_ADMIN_USERNAME=			# Cluster admin role
export FOLLOWER_ADMIN_USERNAME=			# DAP Follower admin role
export DEVELOPER_USERNAME=			# Developer role

# DAP CLUSTER ARTIFACTS
export TEST_APP_NAMESPACE_NAME=testapps		# namespace for apps
export AUTHENTICATOR_ID=			# unique identifier for the k8s cluster

###########################################################
# Values below should not be changed
###########################################################

export CLI=oc
export CONJUR_SERVICEACCOUNT_NAME=conjur-cluster
export CONJUR_FOLLOWER_COUNT=1
export IMAGE_PULL_POLICY=IfNotPresent
export SEED_FETCHER_IMAGE=seed-fetcher:latest
export AUTHENTICATOR_CLIENT_IMAGE=cyberark/conjur-authn-k8s-client:latest
export CONJUR_CONFIG_MAP=conjur-config			# holds DAP configuration data
export APP_CONFIG_MAP=$TEST_APP_NAMESPACE_NAME-config	# holds app configuration data
export CONJUR_AUTHENTICATORS=authn,authn-k8s/$AUTHENTICATOR_ID
export CONJUR_CLUSTER_LOGIN="host/conjur/authn-k8s/$AUTHENTICATOR_ID/apps/$CONJUR_NAMESPACE_NAME/service_account/$CONJUR_SERVICEACCOUNT_NAME"

export SECRETLESS_APP_IMAGE=secretless:latest
export SECRETLESS_BROKER_IMAGE=cyberark/secretless-broker:latest
export SECRETLESS_SERVICEACCOUNT_NAME=secretless-broker
